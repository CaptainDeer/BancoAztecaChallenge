<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="410dp"
    android:layout_height="230dp"
    android:layout_gravity="center"
    android:background="#00320C">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/itemMovie_iv"
        android:layout_width="140dp"
        android:layout_height="230dp"
        android:background="@color/black"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline50H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemMovie_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:text="Id:"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline50H"
        app:layout_constraintStart_toEndOf="@id/itemMovie_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".03" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemMovie_tvLang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline50H"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemMovie_tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Title: "
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemMovie_iv"
        app:layout_constraintTop_toBottomOf="@id/itemMovie_id"
        app:layout_constraintVertical_bias=".04" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemMovie_tvVote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Vote average: "
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemMovie_iv"
        app:layout_constraintTop_toBottomOf="@id/itemMovie_tvTitle"
        app:layout_constraintVertical_bias=".04" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemMovie_tvOverview"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Overview: "
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemMovie_iv"
        app:layout_constraintTop_toBottomOf="@id/itemMovie_tvVote"
        app:layout_constraintVertical_bias=".04" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/itemMovie_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline50H"
        app:layout_constraintStart_toStartOf="@id/guideline50H"
        app:layout_constraintTop_toBottomOf="@id/itemMovie_tvOverview"
        app:layout_constraintVertical_bias=".90" />

</androidx.constraintlayout.widget.ConstraintLayout>